---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Icon } from 'astro-icon/components';

const societies = [
  {
    name: "TERREÏS",
    description: "Première foncière cotée à être 100% investie à Paris (cotée de 2007 à 2019). Terreïs a détenu jusqu'à 2,4 Mds d'euros de patrimoine d'exception.",
    icon: "heroicons:building-office-2",
    link: "https://www.terreis.fr"
  },
  {
    name: "VPF",
    description: "Fonds d'investissement résidentiel et commercial ayant vocation à acquérir des immeubles en bloc à Paris et dans les Hauts-de-Seine (92).",
    icon: "heroicons:home-modern",
    link: "https://www.vpfimmo.fr"
  },
  {
    name: "INDIVPF",
    description: "Spécialiste du rachat de parts indivises à Paris. IndiVpf apporte une solution rapide et sécurisée aux propriétaires en situation d'indivision.",
    icon: "heroicons:user-group",
    link: "https://indivpf.fr"
  },
  {
    name: "IMMOVALTO FUND",
    description: "Foncière privée créée en 2019, Immovalto Fund SC investit stratégiquement dans des actifs tertiaires à fort potentiel.",
    icon: "heroicons:banknotes",
    link: "#"
  },
  {
    name: "TERREÏS RE",
    description: "Structure dédiée à la commercialisation des lots résidentiels cédés par les différentes sociétés foncières du groupe.",
    icon: "heroicons:key",
    link: "#"
  },
  {
    name: "NOE REIM",
    description: "Société d'Investment et Asset Management en charge de la gestion stratégique pour le compte des différentes entités du groupe.",
    icon: "heroicons:presentation-chart-line",
    link: "#"
  },
  {
    name: "GREEN 92",
    description: "Promoteur engagé dans la construction d'ensembles résidentiels collectifs durables et innovants dans les Hauts-de-Seine.",
    icon: "heroicons:globe-europe-africa",
    link: "#"
  },
  {
    name: "ROLAND GOSSELIN",
    description: "Gestionnaire immobilier historique fondé en 1830. Expert en property management, syndic et gestion locative pour le patrimoine résidentiel et tertiaire du groupe.",
    icon: "heroicons:wrench-screwdriver",
    link: "https://www.rolandgosselin.fr/"
  }
];
---

<Layout title="Nos Sociétés" description="Découvrez les sociétés du groupe Ovalto Immobilier : Terreïs, VPF, IndiVpf, Immovalto Fund, Noe Reim, Green 92 et Roland Gosselin.">
  <Header />
  
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="bg-primary py-24 relative overflow-hidden">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
        <h1 class="text-5xl md:text-7xl font-serif font-bold text-white mb-6 animate-reveal">Nos Sociétés</h1>
        <p class="text-xl text-slate-300 max-w-3xl leading-relaxed animate-reveal" style="animation-delay: 0.2s">
          Ovalto Immobilier intervient sur le marché au travers de filiales expertes, adaptées à chaque classe d'actif (résidentiel, bureau, commerce) et stratégie d'investissement.
        </p>
      </div>
      <!-- Background motifs -->
      <div class="absolute bottom-0 right-0 w-1/3 h-full flex items-end justify-end p-12 gap-4 opacity-10 pointer-events-none">
				{[1, 2, 3, 4, 5].map((i) => (
					<div class="w-4 bg-accent animate-grow-up" style={`height: ${i * 15}%; animation-delay: ${i * 0.1}s;`}></div>
				))}
			</div>
    </section>

    <!-- Societies Grid -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {societies.map((society, idx) => (
            <div class="group border border-slate-100 p-10 hover:border-accent/30 hover:shadow-2xl hover:shadow-primary/5 transition-all duration-500 rounded-sm flex flex-col h-full bg-slate-50/30 reveal-on-scroll" style={`transition-delay: ${idx * 0.05}s`}>
              <div class="w-14 h-14 bg-white flex items-center justify-center rounded-sm shadow-sm mb-8 group-hover:bg-primary group-hover:text-white transition-all duration-500">
                <Icon name={society.icon} class="w-7 h-7" />
              </div>
              <h2 class="text-2xl font-serif font-bold text-primary mb-4 group-hover:text-accent transition-colors">{society.name}</h2>
              <p class="text-slate-600 text-sm leading-relaxed mb-10 flex-grow">
                {society.description}
              </p>
              {society.link !== "#" && (
                <a href={society.link} target="_blank" class="inline-flex items-center gap-2 text-primary font-bold border-b-2 border-accent/20 pb-1 hover:border-accent transition-all uppercase text-[10px] tracking-widest">
                  Visiter le site
                  <Icon name="heroicons:arrow-right" class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
                </a>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Synergie Section -->
    <section class="py-32 bg-slate-900 text-white overflow-hidden relative">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-center">
          <div class="lg:col-span-7">
            <h2 class="text-accent uppercase tracking-[0.4em] text-[10px] font-bold mb-6">Expertise Transversale</h2>
            <h3 class="text-4xl md:text-6xl font-serif font-bold mb-10 leading-tight">Une maîtrise totale de la <span class="text-accent italic">chaîne de valeur</span>.</h3>
            <p class="text-lg text-slate-400 mb-12 leading-relaxed">
              De l'acquisition stratégique de parts indivises avec IndiVpf à l'asset management complexe géré par Noe Reim, notre groupe déploie une synergie unique pour valoriser le patrimoine immobilier parisien.
            </p>
            <div class="grid grid-cols-2 gap-8">
              <div class="p-6 bg-white/5 border border-white/10 rounded-sm">
                <div class="text-3xl font-serif font-bold text-accent mb-2">100%</div>
                <div class="text-[10px] text-slate-300 uppercase tracking-widest font-bold">Focus Paris & 92</div>
              </div>
              <div class="p-6 bg-white/5 border border-white/10 rounded-sm">
                <div class="text-3xl font-serif font-bold text-accent mb-2">+1 Md€</div>
                <div class="text-[10px] text-slate-300 uppercase tracking-widest font-bold">Actifs sous gestion</div>
              </div>
            </div>
          </div>
          <div class="lg:col-span-5 relative">
            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-4">
                <div class="aspect-square bg-slate-800 rounded-sm overflow-hidden border border-white/5">
                  <img src="https://images.unsplash.com/photo-1497366216548-37526070297c?q=80&w=2069&auto=format&fit=crop" alt="Bureau" class="w-full h-full object-cover opacity-50" />
                </div>
                <div class="h-32 bg-accent/20 rounded-sm border border-accent/20"></div>
              </div>
              <div class="space-y-4 pt-12">
                <div class="h-32 bg-slate-800 rounded-sm border border-white/5"></div>
                <div class="aspect-square bg-slate-800 rounded-sm overflow-hidden border border-white/5">
                  <img src="https://images.unsplash.com/photo-1545324418-cc1a3fa10c00?q=80&w=1935&auto=format&fit=crop" alt="Résidentiel" class="w-full h-full object-cover opacity-50" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('active');
      }
    });
  }, observerOptions);

  document.querySelectorAll('.reveal-on-scroll').forEach(el => observer.observe(el));
</script>

<style>
	@keyframes reveal {
		from { opacity: 0; transform: translateY(30px); filter: blur(10px); }
		to { opacity: 1; transform: translateY(0); filter: blur(0); }
	}
	@keyframes grow-up {
		from { transform: scaleY(0); transform-origin: bottom; }
		to { transform: scaleY(1); transform-origin: bottom; }
	}
	.animate-reveal {
		animation: reveal 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
		opacity: 0;
	}
	.animate-grow-up {
		animation: grow-up 1.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
	}
  .reveal-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
    filter: blur(10px);
  }
  .reveal-on-scroll.active {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
  }
</style>
